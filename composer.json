{
    "name": "nilportugues/haljson",
    "type": "library",
    "description": "HAL+JSON API transformer outputting valid API responses.",
    "keywords": ["json", "api", "hal", "serializer", "transformer", "psr7", "response"],
    "homepage": "http://nilportugues.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Nil Portugués Calderó",
            "email": "contact@nilportugues.com",
            "role": "Project Lead Developer"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "nilportugues/api-transformer": "~1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.4",
        "fabpot/php-cs-fixer": "~1.9",
        "nilportugues/php_backslasher": "~0.2",
        "mmoreram/php-formatter": "dev-master",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "NilPortugues\\Api\\HalJson\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NilPortugues\\Tests\\Api\\HalJson\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin/"
    }
}
