{
    "name": "nilportugues/hal",
    "type": "library",
    "description": "HAL+JSON and HAL+XML API transformer outputting valid API responses.",
    "keywords": ["json", "xml", "api", "hal", "serializer", "transformer", "psr7", "response"],
    "homepage": "http://nilportugues.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Nil Portugués Calderó",
            "email": "contact@nilportugues.com",
            "role": "Project Lead Developer"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "nilportugues/api-transformer": "~1.5"
    },
    "require-dev": {
        "phpunit/phpunit": "4.4.*",
        "fabpot/php-cs-fixer": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "NilPortugues\\Api\\Hal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NilPortugues\\Tests\\Api\\Hal\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin/"
    }
}
